generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  INSTRUCTOR
  STUDENT
}

model User {
  id            String    @id @default(cuid())
  lastName      String
  firstName     String
  middleInitial String?
  suffix        String?
  email         String   @unique
  password      String
  role          Role     
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}