generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  lastName      String
  firstName     String
  middleInitial String?
  suffix        String?
  email         String   @unique
  password      String
  role          Role
  firstLogin    Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model OTP {
  id        String   @id @default(cuid())
  userEmail String
  otp       String   @db.VarChar(6)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  INSTRUCTOR
  STUDENT
}
